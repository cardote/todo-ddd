generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id        String   @id
  name      String
  email     String   @unique
  createdAt DateTime
  updatedAt DateTime

  tasks     Task[]

  @@index([email])
}

model Task {
  id             String   @id
  title          String
  status         String
  ownerProfileId String
  createdAt      DateTime
  completedAt    DateTime?

  owner          Profile  @relation(fields: [ownerProfileId], references: [id], onDelete: Cascade)

  @@index([ownerProfileId])
  @@index([status])
}

model OutboxMessage {
  id            String   @id
  aggregateType String
  aggregateId   String
  eventName     String
  payload       Json
  occurredAt    DateTime
  processedAt   DateTime?
  attempts      Int      @default(0)
  lastError     String?
  createdAt     DateTime @default(now())

  @@index([processedAt])
  @@index([eventName])
  @@index([aggregateType, aggregateId])
}
